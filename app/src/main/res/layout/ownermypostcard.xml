<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/carts_view_main_ownermypost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border"
        android:padding="3dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">


            <ImageView
                android:id="@+id/imgownermypost"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:padding="3dp"
                android:layout_marginTop="7dp"

                android:text="Btn"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/txtOwnermypostarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgownermypost"
                android:paddingLeft="20dp"

                android:text="Area"
                android:textSize="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtOwnermypostarea"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/imgownermypost"
                android:layout_height="5dp"
                android:padding="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtownermyposttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtOwnermypostarea"

                android:layout_toRightOf="@+id/imgownermypost"
                android:paddingLeft="20dp"
                android:text="Type"
                android:textAllCaps="true"
                android:textSize="20dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtownermyposttype"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/imgownermypost"
                android:layout_height="5dp"
                android:padding="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/ownermypostlinear1"
                android:layout_below="@+id/txtownermyposttype"
                android:layout_toRightOf="@+id/imgownermypost"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView

                    android:id="@+id/txtownermypostrentview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingLeft="10dp"
                    android:text="Rent Per Day"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    />
                <TextView

                    android:id="@+id/txtownermypostrent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Rent Per Day"

                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    />

            </LinearLayout>
            <Button

                android:id="@+id/buttonownerpostdel"
                android:layout_width="match_parent"

                android:layout_height="30dp"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ownermypostlinear1"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:background="#1b94f7"


                android:textColor="#ffffff" />

            <!--android:text="Delete"-->






        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>