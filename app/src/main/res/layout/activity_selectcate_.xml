<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spartans.rentec.Selectcate_Activity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/Browse"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/searchselecthouse"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="62dp"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/searchselectshop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/shoppingcart"
        android:layout_below="@+id/searchselecthouse"
        android:layout_alignStart="@+id/searchselecthouse" />

    <ImageView
        android:id="@+id/searchselectmotorbike"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/motorbike"
        android:layout_below="@+id/searchselectshop"
        android:layout_alignStart="@+id/searchselectshop" />

    <TextView
        android:id="@+id/txthouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="@string/home"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/searchselecthouse"
        android:layout_toEndOf="@+id/searchselecthouse"
        android:layout_marginBottom="26dp" />

    <TextView
        android:id="@+id/txtshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchselectmotorbike"
        android:layout_alignStart="@+id/txthouse"
        android:layout_marginBottom="27dp"
        android:text="@string/shop"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/txtvehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtshop"
        android:layout_alignTop="@+id/searchselectmotorbike"
        android:layout_marginTop="28dp"
        android:text="@string/motorbike"
        android:textSize="30dp"/>

</RelativeLayout>
