<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/carts_view_main_lawyerselectcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border"
        android:padding="3dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">


            


            <TextView
                android:id="@+id/lawyerrequestcardline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:paddingLeft="20dp"

                android:text="Line1"
                android:textSize="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lawyerrequestcardline1"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/imgownermypost"
                android:layout_height="5dp"
                android:padding="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/lawyerrequestcardline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawyerrequestcardline1"

                android:layout_toRightOf="@+id/imgownermypost"
                android:paddingLeft="20dp"
                android:text="Line2"
                android:textAllCaps="true"
                android:textSize="20dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lawyerrequestcardline2"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/imgownermypost"
                android:layout_height="5dp"
                android:padding="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/lawyerrequestcardline3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawyerrequestcardline2"


                android:paddingLeft="20dp"
                android:text="line3"
                android:textAllCaps="true"
                android:textSize="20dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lawyerrequestcardline3"
                android:layout_width="match_parent"

                android:layout_height="5dp"
                android:padding="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/lawyerrequestcardline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lawyerrequestcardline3"


                android:paddingLeft="20dp"
                android:text="Line4"
                android:textAllCaps="true"
                android:textSize="20dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lawyerrequestcardline4"
                android:layout_width="match_parent"

                android:layout_height="5dp"
                android:padding="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <Button

                android:id="@+id/buttonlawyeraccept"
                android:layout_width="match_parent"

                android:layout_height="30dp"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/lawyerrequestcardline4"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:background="#1b94f7"

                android:text="Accept"
                android:textColor="#ffffff" />








        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>